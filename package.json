{
  "name": "auth0-deployment",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Auth0 custom database, hosted pages and rules scripts.",
  "repository": {
    "type": "git",
    "url": "https://github.com/rdahbura/auth0-deployment.git"
  },
  "scripts": {
    "format": "prettier --write './{clients,connections,database-connections,emails,grants,guardian,pages,resource-servers,roles,rules}/**/*.{css,html,js,json,jsx}'"
  },
  "dependencies": {
    "lodash": "^4.17.14",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "engines": {
    "node": "12",
    "yarn": "1"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
